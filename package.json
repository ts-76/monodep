{
    "name": "monodep",
    "version": "0.1.9",
    "description": "A dependency check tool for monorepos",
    "author": "ts-76",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ts-76/monodep.git"
    },
    "keywords": [
        "monorepo",
        "dependency",
        "check",
        "cli",
        "analysis"
    ],
    "files": [
        "dist"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "monodep": "dist/index.js"
    },
    "scripts": {
