        "js-yaml": "^4.1.1",
        "lilconfig": "^3.1.3",
        "semver": "^7.7.3"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^24.10.1",
        "@types/semver": "^7.7.1",
        "changelogen": "^0.6.2",
        "rolldown": "^1.0.0-beta.55",
        "typescript": "^5.9.3"
    }
